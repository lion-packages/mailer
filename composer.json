{
    "name": "lion/mailer",
    "description": "Library created to facilitate sending email based on different services",
    "type": "library",
    "license": "MIT",
    "homepage": "https://dev.lion-packages.com",
    "keywords": [
        "lion",
        "mailer",
        "lion-mailer"
    ],
    "support": {
        "issues": "https://github.com/lion-packages/mailer/issues",
        "source": "https://github.com/lion-packages/mailer"
    },
    "autoload": {
        "psr-4": {
            "Lion\\Mailer\\": "src/LionMailer/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "lion/test": "^2.0 || ^3.0",
        "symfony/mime": "^6.3 || ^7.0",
        "phpmailer/phpmailer": "^6.9",
        "symfony/mailer": "^7.0",
        "phpunit/phpunit": "^12.0",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.12",
        "vlucas/phpdotenv": "^5.6",
        "overtrue/phplint": "^9.5",
        "infection/infection": "^0.29.14"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": false
        }
    }
}
